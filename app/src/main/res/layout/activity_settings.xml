<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.michael.pictureapplication.Settings"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="@string/settings_text_view"
        android:layout_marginBottom="10dp"
        android:textColor="#ff000000" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.SwipeRefreshLayout>
        <RadioGroup
            android:id="@+id/radio_group_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/radio_button_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/techies_string"
                android:drawableLeft="@drawable/techies_small"
                android:layout_marginBottom="10dp"/>
                //android:buttonTint="@string/techies_color"/>

            <RadioButton
                android:id="@+id/radio_button_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/winter_wyvern_string"
                android:drawableLeft="@drawable/winter_wyvern_small"
                android:layout_marginBottom="10dp"/>
                //android:buttonTint="@string/winter_wyvern_color"/>

            <RadioButton
                android:id="@+id/radio_button_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/invoker_string"
                android:drawableLeft="@drawable/invoker_small"
                android:layout_marginBottom="10dp"/>
                //android:buttonTint="@string/invoker_color"/>

            <RadioButton
                android:id="@+id/radio_button_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/earth_spirit_string"
                android:drawableLeft="@drawable/earth_spirit_small"
                android:layout_marginBottom="10dp"/>
                //android:buttonTint="@string/earth_spirit_color"/>

            <RadioButton
                android:id="@+id/radio_button_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/templar_assassin_string"
                android:drawableLeft="@drawable/templar_assassin_small"
                android:layout_marginBottom="10dp"/>
                //android:buttonTint="@string/templar_assassin_color"/>
        </RadioGroup>
    </ScrollView>
</LinearLayout>